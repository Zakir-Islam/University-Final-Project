@model AssignRoleModel


<h4>Assign Role</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="AssignRole" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="user_id" />
            <div class="form-group">
                <label asp-for="role_id" class="control-label"></label>
                <select asp-for="role_id" asp-items="ViewBag.List" class="form-control"></select>
                <span asp-validation-for="role_id" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>