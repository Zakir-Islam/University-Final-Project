@inject SignInManager<ApplicationUser> signInManager;
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - University_Final_Project</title>
    
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.min.js"></script>

    <link href="~/StyleSheet.css" rel="stylesheet" />
</head>
<body>
    <header>


        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" asp-action="index" asp-controller="home">
                <img src="~/images/uni-logo.png" />
            </a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNavDropdown">
                <ul class="navbar-nav">
                    <li class="nav-item active">
                        <a class="nav-link" asp-action="index" asp-controller="home">Home</a>
                    </li>
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Admin"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="CorseDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Subject
                            </a>
                            <div class="dropdown-menu" aria-labelledby="CorseDropDown">
                                <a class="dropdown-item" asp-action="Create" asp-controller="Subjects">Create</a>
                                <a class="dropdown-item" asp-action="index" asp-controller="Subjects">View LIst</a>

                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="CorseDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Department
                            </a>
                            <div class="dropdown-menu" aria-labelledby="CorseDropDown">
                                <a class="dropdown-item" asp-action="Create" asp-controller="Department">Create</a>
                                <a class="dropdown-item" asp-action="index" asp-controller="Department">View LIst</a>

                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="CorseDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Degree
                            </a>
                            <div class="dropdown-menu" aria-labelledby="CorseDropDown">
                                <a class="dropdown-item" asp-action="Create" asp-controller="Degree">Create</a>
                                <a class="dropdown-item" asp-action="index" asp-controller="Degree">View LIst</a>

                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="RolesDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Role
                            </a>
                            <div class="dropdown-menu" aria-labelledby="RolesDropDown">
                                <a class="dropdown-item" asp-action="CreateRole" asp-controller="Administrator">Create</a>
                                <a class="dropdown-item" asp-action="ViewList" asp-controller="Administrator">View List</a>

                            </div>
                        </li>

                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="UserDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Admin
                            </a>
                            <div class="dropdown-menu" aria-labelledby="UserDropDown">
                                <a class="dropdown-item" asp-action="Create" asp-controller="Admin">Register</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Admin">View List</a>

                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="UserDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Student
                            </a>
                            <div class="dropdown-menu" aria-labelledby="UserDropDown">
                                <a class="dropdown-item" asp-action="Create" asp-controller="Student">Register</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Student">View List</a>

                            </div>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="UserDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Teacher
                            </a>
                            <div class="dropdown-menu" aria-labelledby="UserDropDown">
                                <a class="dropdown-item" asp-action="Create" asp-controller="Teacher">Register</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="Teacher">View List</a>

                            </div>
                        </li>
                    }

                    @if (signInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Teacher")))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="ResultDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Manage Result
                            </a>
                            <div class="dropdown-menu" aria-labelledby="ResultDropDown">
                                <a class="dropdown-item" asp-action="Create" asp-controller="ExamResults">Create</a>
                                <a class="dropdown-item" asp-action="Index" asp-controller="ExamResults">View List</a>

                            </div>
                        </li>
                    }
                    @if (signInManager.IsSignedIn(User) && User.IsInRole("Student"))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="StudentResultdrop" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                Results
                            </a>
                            <div class="dropdown-menu" aria-labelledby="StudentResultdrop">

                                <a class="dropdown-item" asp-action="ViewTranscript" asp-controller="ExamResults">Transcript</a>

                            </div>
                        </li>
                    }




                </ul>
                 <ul class="navbar-nav ml-auto">
                    <li class="nav-item dropdown float-right" sty>
                        <a class="nav-link dropdown-toggle" href="#" id="LogoutDropDown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Hello  @User.Identity.Name
                        </a>
                        <div class="dropdown-menu" aria-labelledby="LogoutDropDown">

                            <a class="dropdown-item" asp-action="Logout" asp-controller="Account">Logout</a>
                            <a class="dropdown-item" asp-action="ChangeUserPassword" asp-controller="Account">Change Password</a>
                        </div>
                    </li>
                 </ul>

               
            </div>
        </nav>


    </header>
    <!--Side bar start from here
    <aside class="aside1">



        @if (signInManager.IsSignedIn(User) && (User.IsInRole("Admin")))
        {
            <h3 class="text-white">Manage Roles</h3>

            <ul class="text-white">

                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Administrator" asp-action="ViewList">View List</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Administrator" asp-action="CreateRole">Create</a>
                </li>
            </ul>
            <h3 class="text-white">Mangae Courses</h3>

            <ul class="text-white">

                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Subjects" asp-action="Index">View List</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Subjects" asp-action="Create">Create</a>
                </li>

            </ul>
            <h3 class="text-white">Mangae Users</h3>

            <ul class="text-white">

                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Register">Register</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="Account" asp-action="Index">View List</a>
                </li>

            </ul>
        }







        @if (signInManager.IsSignedIn(User) && (User.IsInRole("Admin") || User.IsInRole("Teacher")))
        {
            <h3 class="text-white">Manage Results</h3>

            <ul class="text-white">

                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="ExamResults" asp-action="Index">View List</a>
                </li>
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="ExamResults" asp-action="Create">Create</a>
                </li>
            
            </ul>
        }

        @if (signInManager.IsSignedIn(User) && User.IsInRole("Student"))
        {
            <h3 class="text-white">Results</h3>

            <ul class="text-white">
                <li>
                    <a class="nav-link text-white" asp-area="" asp-controller="ExamResults" asp-action="ViewTranscript">View Transcript</a>
                </li>
            </ul>
          }




        </aside>
    <!--Side bar End here-->
    <div >
        <div class="container ">
             @RenderBody()
         </div>
    </div>
  

    @RenderSection("Scripts", required: false)
</body>
</html>
