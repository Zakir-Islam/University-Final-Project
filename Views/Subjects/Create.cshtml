                <span asp-validation-for="credit_hours" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />|
                <a asp-action="Index" class="btn btn-primary">Back to List</a>
            </div>
